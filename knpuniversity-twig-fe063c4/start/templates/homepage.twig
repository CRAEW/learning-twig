    <h1>{{ pageData.title }}</h1>
    <p>
        {{ pageData.summary }}
    </p>

    {% if pageData.hasSale %}
    <div class="sale-ends-at">
        Sale Ends: {{ saleEndsAt|date('D M jS ga') }}
    </div>
    {% endif %}
</div>

